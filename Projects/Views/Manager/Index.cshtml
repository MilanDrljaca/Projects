@model PaginatedList<DomainModel.Manager>
@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="..\css\nlb.css" rel="stylesheet" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
</head>


<p class="first">
    <button class="button"><a asp-controller="Manager" asp-action="Create">Unesi novog menadžera</a></button>
    @*<button class="button"><a asp-controller="Manager" asp-action="Index">Manager List</a></button>*@
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p style="text-align:right">
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Active"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Active</a>
            </th>

            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ManagerNameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Manager</a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Active > 0)
                    {
                        @Html.DisplayName("Aktivan");
                    }
                    else
                    {
                        @Html.DisplayName("Neaktivan");
                    }
                    @*@Html.DisplayFor(modelItem => item.Active)*@
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ManagerName)
                </td>

                <td>
                    <button class="button"><a asp-action="Deactivate" asp-route-id="@item.ManagerName">Deaktiviraj</a></button>
                    <button class="button"><a asp-action="Details" asp-route-id="@item.ManagerName">Details</a></button>
                    <button class="button"><a asp-action="Delete" asp-route-id="@item.ManagerName">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>